# API Gateway Service Configuration

# Server Configuration
PORT=3000                                    # Port on which the API Gateway will listen

# JWT Configuration
JWT_SECRET=your-secret-key-here              # Secret key for JWT token validation (MUST match auth-service)

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001       # URL of the Auth Service for proxying authentication requests
TRUST_SERVICE_URL=http://localhost:3002      # URL of the Trust Service (currently unused but reserved for future use)

# Kafka Configuration
KAFKA_BROKER=localhost:9092                  # Kafka broker address for publishing evaluation job messages

# Database Configuration
DB_HOST=localhost                            # PostgreSQL database host
DB_PORT=5432                                 # PostgreSQL database port
DB_NAME=ai_evaluation_platform               # PostgreSQL database name
DB_USER=postgres                             # PostgreSQL database user
DB_PASSWORD=postgres                         # PostgreSQL database password
